{
  "name": "nodejs-template-starter",
  "version": "1.0.0",
  "description": "Starter template for a new nodejs project.",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "build": "rimraf dist/ && tsc -p . && copyfiles -u 1 src/views/* dist/",
    "start": "node dist/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "stop": "pkill node",
    "stop-win": "taskkill /f /im node.exe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qual09/nodejs-template-starter.git"
  },
  "author": "Hieu CPX",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qual09/nodejs-template-starter/issues"
  },
  "homepage": "https://github.com/qual09/nodejs-template-starter#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.9.0",
    "rimraf": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.14.1",
    "@types/pg": "^8.6.6",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
